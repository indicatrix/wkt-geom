name:                wkt-geom
version:             0.1.0.0
synopsis:            A package for parsing WKT, WKB and eWKB
description:         A package for parsing WKT, WKB and eWKB
homepage:            https://github.com/indicatrix/wkt-geom#readme
license:             Apache-2.0
license-file:        LICENSE
author:              Andrew Newmnan, Dominic Endrei
maintainer:          andrewfnewman@gmail.com
copyright:           2017-2018 Wkt-Geom Project
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Data.Ewkb
                     , Data.Ewkb.Geometry
                     , Data.Wkb
                     , Data.Wkb.Endian
                     , Data.Wkb.Geometry
                     , Data.Wkb.GeometryCollection
                     , Data.Wkb.Geospatial
                     , Data.Wkb.Line
                     , Data.Wkb.Point
                     , Data.Wkb.Polygon
                     , Data.Wkt.Line
                     , Data.Wkt.Point
                     , Data.Wkt.Polygon
                     , Data.Wkt.GeometryCollection
                     , Data.Wkt

  build-depends:       base >= 4.8 && < 5
                     , binary
                     , bytestring
                     , geojson >= 1.3.3
                     , scientific
                     , trifecta 
                     , utf8-string
  ghc-options:         -Wall
  default-language:    Haskell2010

test-suite wkt-geom-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  other-modules:       Data.Ewkb.GeometrySpec
                     , Data.Wkb.EndianSpec
                     , Data.Wkb.GeometrySpec
                     , Data.Wkb.GeometryCollectionSpec
                     , Data.Wkb.LineSpec
                     , Data.Wkb.PointSpec
                     , Data.Wkb.PolygonSpec
                     , Data.Wkt.GeometryCollectionSpec
                     , Data.Wkt.LineSpec
                     , Data.Wkt.PointSpec
                     , Data.Wkt.PolygonSpec            
  main-is:             Spec.hs
  build-depends:       base
                     , binary
                     , ansi-wl-pprint
                     , bytestring
                     , geojson >= 1.3.3
                     , hspec
                     , lens
                     , QuickCheck
                     , scientific
                     , trifecta 
                     , wkt-geom
  ghc-options:         -Wall
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/githubuser/wkt-geom
